syntax on
set number
set incsearch
set hlsearch
set ignorecase
set smartcase
set nocompatible
set ruler
set showcmd
set foldenable
set noerrorbells visualbell t_vb=
set mouse=a
set mousemodel=popup
set autoindent
set smartindent
set expandtab
set softtabstop=2
set shiftwidth=2
set colorcolumn=81
highlight ColorColumn ctermbg=darkgray

autocmd FileType python set softtabstop=4| set shiftwidth=4
